
<div class="container">

	<h1>Disaster news</h1>
	<table class= "table">
		<tr>
			<td>Title </td>
			<td>Author</td>
			<td>Comment</td>
			<td>Last reply</td>
		</tr>
		<tbody>
			<% @issues.each do |issue| %>
			<tr>
				<td><%= link_to "#{issue.title}", issue_path(issue) %> <div class="btn btn-success"><%= issue.category.try(:name) %></div></td>
				<td><%= issue.user.email %></td>
				<td><%= issue.content %></td>
				<td><%= time_ago_in_words(issue.created_at) %></td>
			<% end %>
			</tr>
		</tbody>

	</table>
  <%= paginate @issues %>
	<% if current_user %>
		<%= link_to "New Post", new_issue_path %>
	<% end  %>
</div>