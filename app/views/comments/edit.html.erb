<%= form_for @comment, url: issue_comment_path(@issue, @comment) do |f| %>
    <% if @comment.errors.any? %>
        <ul>
          <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
    <%= f.label "Edit Content" %>
    <%= f.text_field :content %>
    <%= f.submit "Update" %>
<% end %>

<%= link_to "Back", issue_path(@issue) %>